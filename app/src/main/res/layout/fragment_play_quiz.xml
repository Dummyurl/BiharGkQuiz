<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/relative"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/imgTop"
        android:layout_height="@dimen/home_page_swami_image_size"
        android:background="@drawable/top"
        />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/about_text_size"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/game_over_button_margin"
                android:layout_height="@dimen/game_over_button_margin"
                android:background="@drawable/ic_true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:id="@+id/txtTrue"
                android:textSize="@dimen/top_sub_heading"
                android:text=""/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/txtScore"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/about_text_size"
                android:layout_toEndOf="@+id/score"
                android:layout_toRightOf="@+id/score"
                android:layout_marginLeft="@dimen/next_prev_left_right_margin"
                />
            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/about_text_size"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/game_over_button_margin"
                android:layout_height="@dimen/game_over_button_margin"
                android:background="@drawable/ic_cancel"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:id="@+id/txtFalse"
                android:textSize="@dimen/top_sub_heading"
                android:text=""/>
        </LinearLayout>
    </RelativeLayout>
    </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:id="@+id/rel"
    android:layout_weight="2"
    android:layout_below="@+id/relative"
    android:layout_height="@dimen/select_level_height"
    android:layout_marginLeft="@dimen/button_margin_5dp"
    android:layout_marginRight="@dimen/button_margin_5dp"
    android:background="@drawable/qstn">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/txtOutOfQue"
        android:layout_marginTop="@dimen/game_over_button_margin"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/top_toolbal_user_info_txt_size"/>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:layout_below="@+id/txtOutOfQue"
        android:layout_marginLeft="@dimen/top_button_left_right"
        android:layout_marginRight="@dimen/top_button_left_right"
        android:layout_marginTop="@dimen/about_text_size"
        android:layout_marginBottom="@dimen/top_toolbal_size"
        android:id="@+id/scrollView">

        <TextView
            android:id="@+id/txtQuestion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/game_middle_line"
            android:text=""
            android:layout_gravity="center"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/top_sub_heading"/>
    </ScrollView>

</RelativeLayout>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBookmark"
        android:layout_alignBottom="@+id/rel"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/home_screen_top_button_left_right_margin"
        android:layout_marginRight="@dimen/about_text_size"
        android:background="@drawable/ic_book_off"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_below="@+id/rel"
        android:layout_marginTop="@dimen/about_text_size"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/drawder_left_right_padding"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/relative1"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_45dp"
            android:layout_centerVertical="true"
            android:id="@+id/img1"
            android:layout_marginLeft="@dimen/about_text_size"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/rounded_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textPrimary"
            android:id="@+id/txtOption1"
            android:layout_centerInParent="true"
            android:textSize="@dimen/top_sub_heading"
            android:gravity="center"
            android:layout_marginRight="@dimen/game_over_button_margin"
            android:layout_marginLeft="@dimen/news_img_size"
            android:text=""/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/rel1"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dialog_button_height"
            android:layout_height="@dimen/dialog_button_height"
            android:id="@+id/imgOption1"
            android:padding="@dimen/next_prev_left_right_margin"
            android:background="@drawable/round_sky"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:id="@+id/optionA"
                android:layout_centerInParent="true"
                android:textSize="@dimen/about_text_size"
                android:textColor="@color/colorAccent"/>
    </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/relative2"
        android:layout_marginTop="@dimen/top_toolbal_left_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_45dp"
            android:id="@+id/img2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/about_text_size"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/rounded_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textPrimary"
            android:id="@+id/txtOption2"
            android:layout_centerInParent="true"
            android:textSize="@dimen/top_sub_heading"
            android:layout_marginLeft="@dimen/news_img_size"
            android:text=""/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/rel2"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dialog_button_height"
                android:layout_height="@dimen/dialog_button_height"
                android:id="@+id/imgOption2"
                android:padding="@dimen/next_prev_left_right_margin"
                android:background="@drawable/round_sky"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B"
                android:id="@+id/optionB"
                android:layout_centerInParent="true"
                android:textSize="@dimen/about_text_size"
                android:textColor="@color/colorAccent"/>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/relative3"
        android:layout_marginTop="@dimen/top_toolbal_left_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_45dp"
            android:id="@+id/img3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/about_text_size"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/rounded_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textPrimary"
            android:id="@+id/txtOption3"
            android:layout_centerInParent="true"
            android:textSize="@dimen/top_sub_heading"
            android:layout_marginLeft="@dimen/news_img_size"
            android:text=""/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/rel3"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dialog_button_height"
                android:layout_height="@dimen/dialog_button_height"
                android:id="@+id/imgOption3"
                android:padding="@dimen/next_prev_left_right_margin"
                android:background="@drawable/round_sky"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:id="@+id/optionC"
                android:layout_centerInParent="true"
                android:textSize="@dimen/about_text_size"
                android:textColor="@color/colorAccent"/>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/relative4"
        android:layout_marginTop="@dimen/top_toolbal_left_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/about_text_size"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/img4"
            android:background="@drawable/rounded_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textPrimary"
            android:id="@+id/txtOption4"
            android:layout_centerInParent="true"
            android:textSize="@dimen/top_sub_heading"
            android:layout_marginLeft="@dimen/news_img_size"
            android:text=""/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/rel4"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dialog_button_height"
                android:layout_height="@dimen/dialog_button_height"
                android:id="@+id/imgOption4"
                android:padding="@dimen/next_prev_left_right_margin"
                android:background="@drawable/round_sky"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D"
                android:id="@+id/optionD"
                android:layout_centerInParent="true"
                android:textSize="@dimen/about_text_size"
                android:textColor="@color/colorAccent"/>
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
    </ScrollView>
</RelativeLayout>