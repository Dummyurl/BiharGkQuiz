<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="@dimen/margin_150dp"
            android:layout_height="@dimen/margin_150dp"
            android:layout_marginTop="@dimen/game_over_button_margin"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/minus_50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:id="@+id/txtBookmark"
                android:text="Bookmark \n Successfully!"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ok"
                android:id="@+id/btnOk"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginRight="@dimen/next_prev_left_right_margin"
                android:layout_marginLeft="@dimen/next_prev_left_right_margin"
                android:layout_alignParentBottom="true"
                style="@style/AppTheme.Button"
                android:textColor="@color/white"
                />

            <!---add your views here-->
        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/imageView_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:clickable="true"
            app:backgroundTint="@color/green"
            android:src="@drawable/ic_true" />
    </FrameLayout>

</LinearLayout>