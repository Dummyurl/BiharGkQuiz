<?xml version="1.0" encoding="utf-8"?>
<selector
   xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
               android:endColor="@android:color/transparent"
               android:startColor="@android:color/transparent"
               android:angle="270" />
            <stroke
               android:width="1dp"
               android:color="@color/colorAccent" />
            <corners
               android:radius="@dimen/top_button_left_right" />
            <padding
               android:left="0dp"
               android:top="@dimen/top_button_left_right"
               android:right="0dp"
               android:bottom="@dimen/top_button_left_right" />
        </shape>
    </item>

